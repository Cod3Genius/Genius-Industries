#Nhost 
NHOST_URL=https://nhost-project-id.nhost.run
NHOST_ADMIN_SECRET=nhost-admin-secret

# Emails
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@geniusindustries.org
EMAILS_FROM_NAME=Genius Industries
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48
